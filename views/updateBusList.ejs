<html>
    <head>
        <title>Bus App</title>
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
        <link rel="icon" type="image/x-icon" href="/img/busAppIcon.png">
        <link rel="stylesheet" href="/css/updateBusList.css">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    </head>
    <body> 
        <div class="header">
            <div class="back-button-div">
                <a class="button back-button" href="/admin">Back to Admin Page</a>
            </div>
            <div class="options-div">
                <button class="button save-reset-button" onclick="save(true)">Save and Update</button>
                <button class="button save-no-reset-button" onclick="save(false)">Save Without Updating</button>
                <button class="button discard-changes-button" onclick="discardChanges()">Discard Changes</button>
            </div>            
        </div>
        <table class="buslist-table">
            <thead> 
                <tr>
                    <th>Buses</th>
                    <th class="remove-col"></th>
                </tr>                
            </thead>
            <tr class="add-bus-row">
                <td class=>Add bus</td>
                <td class="add-bus-cell"><i class="fa-solid fa-plus add-bus-button table-button" onclick="newBus_busList()"></i></td>
            </tr>
            <% for(i = 0; i <data.busList.length; i++) { %>
                <tr>
                    <td><%= data.busList[i]%></td>
                    <td class="remove-col"><i class="fas fa-times remove-button table-button" onclick="removeBus_busList(this)"></i></td>
                </tr>
            <% } %> 
        </table>
        <script src="js/ejs.js"></script>
        <script src="/socket.io/socket.io.js"></script>
        <script src="js/updateBusList.js"></script>
    </body>
</html>